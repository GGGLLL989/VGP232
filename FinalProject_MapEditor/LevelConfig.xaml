<Window x:Class="FinalProject_MapEditor.LevelConfig"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinalProject_MapEditor"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Background="#EEEEEE"
        Title="Size Selection" Height="300" Width="400">
    <Grid>
        <RadioButton x:Name="radioButton" Content="15 x 15" HorizontalAlignment="Center" Margin="0,52,0,0" VerticalAlignment="Top" Checked="ChooseSize" IsChecked="True"/>
        <RadioButton x:Name="radioButton1" Content="20 x 20" HorizontalAlignment="Center" Margin="0,98,0,0" VerticalAlignment="Top" Checked="ChooseSize"/>
        <RadioButton x:Name="radioButton2" Content="25 x 25" HorizontalAlignment="Center" Margin="0,147,0,0" VerticalAlignment="Top" Checked="ChooseSize"/>
        <Button x:Name="button" Content="Continue" HorizontalAlignment="Center" Margin="0,209,0,0" VerticalAlignment="Top" Width="82" Click="button_Click"/>

    </Grid>
</Window>
